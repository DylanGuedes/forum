<h1>New Section</h1>

<%= form_for @changeset, section_path(@conn, :create), fn f -> %>

  <div class="form-group">
    <%= text_input f, :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= text_input f, :description, placeholder: "Username", class: "form-control" %>
  </div>

  <%= submit "Create Section", class: "btn btn-primary" %>

<% end %>
